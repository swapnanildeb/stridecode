    script.
      //document.getElementsByClassName("triangle-right").style.visibility = "hidden";
      $(".triangle-right").fadeOut(1);
      $(".triangle-bottom").fadeOut(1);
      $(".current").children(".triangle-right").fadeIn(1);
      $(".page").fadeOut(1);
      $(".first").fadeIn(1);
      $("#newClassForm").slideUp(1);
      $("#classPage").fadeOut(1);
    script.
      $(document).ready(function(){
      $("a, .submitInput").on('click',function(e){
      $(".current").children(".triangle").hide();
      $(".current").removeClass("current");
      $(this).addClass("current");
      $(this).children("p").addClass("current");
      $(this).children(".triangle").show();
      $(this).parent('li').addClass('active').siblings().removeClass('active');
      if($(this).hasClass("tab")){
      var currentAttrValue = $(this).attr('href');
      $(currentAttrValue).delay(500).fadeIn(500);
      $(currentAttrValue).siblings("ul").fadeOut(500);
      $("#newAssign").fadeOut(500).fadeIn(500);
      $("#newClassForm").slideUp();
      e.preventDefault();
      }
      else{
      $("#newClassForm").slideDown();
      $("#newClassForm").delay(2000).focus();
      }
      if(!($(this).hasClass("submitInput")) &&!($(this).hasClass("newClassClass")))
      {
      $("#addedClass").fadeOut(500);
      }
      });
      });
